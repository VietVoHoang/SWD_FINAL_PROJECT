<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.waterinc.model.Agency</class>
        <class>com.waterinc.model.Customer</class>
        <class>com.waterinc.model.Employee</class>
        <class>com.waterinc.model.Oderitem</class>
        <class>com.waterinc.model.Order</class>
        <class>com.waterinc.model.Product</class>
        <class>com.waterinc.model.Bonuscoefficient</class>
        <class>com.waterinc.model.Orderitem</class>
        <class>com.waterinc.model.Salary</class>
        <class>com.waterinc.model.User</class>
        <class>com.waterinc.model.BonuscoefficientEntity</class>
        <class>com.waterinc.model.EmployeesEntity</class>
        <class>com.waterinc.model.OrderitemsEntity</class>
        <class>com.waterinc.model.OrdersEntity</class>
        <class>com.waterinc.model.ProductsEntity</class>
        <class>com.waterinc.model.SalaryEntity</class>
        <class>com.waterinc.model.UsersEntity</class>
        <class>com.waterinc.model.Employees</class>
        <class>com.waterinc.model.Orderitems</class>
        <class>com.waterinc.model.Orders</class>
        <class>com.waterinc.model.Products</class>
        <class>com.waterinc.model.Users</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/waterincdb"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="123456"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
